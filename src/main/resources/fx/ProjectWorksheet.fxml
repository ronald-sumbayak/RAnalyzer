<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ra.sumbayak.ranalyzer.boundary.ProjectWorksheetController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#createNewProject" text="Create New Project" />
                  <MenuItem mnemonicParsing="false" onAction="#openExistingProject" text="Open Existing Project" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#saveProject" text="Save" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#closeProject" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox>
         <children>
            <JFXButton onAction="#viewDependency" text="View Dependency">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </JFXButton>
            <JFXButton onAction="#checkDependency" text="Check Dependency">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>
      <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
        <items>
          <AnchorPane>
               <children>
                  <TitledPane layoutY="-52.0" prefHeight="181.0" prefWidth="295.0" text="UML Diagram" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <content>
                        <fx:include fx:id="ucDiagramWindow" source="UCDiagramWindow.fxml" />
                     </content></TitledPane>
               </children>
            </AnchorPane>
          <AnchorPane>
               <children>
                  <TitledPane layoutX="-14.0" layoutY="-12.0" prefHeight="181.0" prefWidth="295.0" text="Statement" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <content>
                        <fx:include fx:id="statementWindow" source="StatementWindow.fxml" />
                     </content></TitledPane>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
</VBox>
